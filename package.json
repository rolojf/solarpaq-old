{
  "name": "rolo-elm-pages-base",
  "private": true,
  "version": "1.0.0",
  "postinstall": "elm-tooling install",
  "scripts": {
    "old": "elm-pages develop",
    "elementos": "node ./elementos.js",
    "dev": "run-s dev:tw dev:pages dev:serve",
    "dev:tw": "NODE_ENV=development postcss -c ./postcss.config.js -o ./beta-style.css ./style.css",
    "dev:pages": "elm-pages-beta",
    "dev:serve": "http-server dist",
    "prod": "run-s build:tw build:pages",
    "build:tw": "NODE_ENV=production postcss style.css -o beta-style.css",
    "build:pages": "NODE_ENV=production elm-pages-beta"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "cross-spawn": "^7.0.3",
    "elm-pages": "file:../elm-pages",
    "tailwindcss": "^2.0.3",
    "terser": "^5.6.1"
  },
  "devDependencies": {
    "elm-oembed": "0.0.6",
    "elm-tooling": "^1.2.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5"
  }
}
